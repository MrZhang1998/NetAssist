<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.* ?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<GridPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="750.0"
	prefWidth="1000.0" xmlns="http://javafx.com/javafx/8"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.NetAssistController">
	<columnConstraints>
		<ColumnConstraints hgrow="SOMETIMES"
			maxWidth="250.0" minWidth="10.0" prefWidth="250.0" />
		<ColumnConstraints hgrow="SOMETIMES"
			maxWidth="750.0" minWidth="10.0" prefWidth="750.0" />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints maxHeight="240.0" minHeight="10.0"
			prefHeight="240.0" vgrow="SOMETIMES" />
		<RowConstraints maxHeight="255.0" minHeight="10.0"
			prefHeight="255.0" vgrow="SOMETIMES" />
		<RowConstraints maxHeight="255.0" minHeight="10.0"
			prefHeight="255.0" vgrow="SOMETIMES" />
	</rowConstraints>
	<children>
		<VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
			<children>
				<Label text="网络设置" />
				<Label fx:id="label_netType" text="协议类型" />
				<ComboBox fx:id="combobox_type_of_internet" prefWidth="150.0" onAction="#onInternetTypeChange">
					<items>
						<FXCollections fx:factory="observableArrayList">
							<String fx:value="TCP Client" />
							<String fx:value="TCP Server" />
							<String fx:value="UDP" />
						</FXCollections>
					</items>
					<value>
						<String fx:value="UDP" />
					</value>
				</ComboBox>
				
				<Label fx:id="label_ipAddress" text="本机主机地址">
					<padding>
						<Insets top="5.0" />
					</padding>
				</Label>
				
				<ComboBox fx:id="combobox_local_ip_address" prefWidth="150.0">
					
				</ComboBox>
				<!--  
				<TextField fx:id="textfield_ipAddress" maxWidth="150.0"
					minHeight="-Infinity" minWidth="-Infinity" prefWidth="150.0" />
				-->
				<Label fx:id="label_port" text="端口" />
				<TextField fx:id="textfield_port" maxWidth="150.0"
					prefWidth="150.0" />
				<Button minHeight="30.0" mnemonicParsing="false" fx:id="button_connect"
					prefHeight="30.0" prefWidth="90.0" text="打开" onAction="#doConnect">
					<VBox.margin>
						<Insets left="20.0" />
					</VBox.margin>
				</Button>
			</children>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
			<GridPane.margin>
				<Insets top="70.0" />
			</GridPane.margin>
		</VBox>
		<VBox prefHeight="233.0" prefWidth="492.0" spacing="10.0"
			GridPane.rowIndex="1">
			<children>
				<Label text="接收设置" />
				<HBox prefHeight="30.0" prefWidth="100.0" spacing="10.0">
					<children>
						<RadioButton fx:id="radiobutton_ascii" onAction="#onAsciiClick" mnemonicParsing="false" selected="true"
							text="ASCII" />
						<RadioButton fx:id="radiobutton_hex" onAction="#onHexClick"  mnemonicParsing="false" text="HEX" />
					</children>
				</HBox>
				<CheckBox fx:id="checkbox_log_mode" onAction="#changeLogMode"  mnemonicParsing="false" text="按日志模式显示" />
				<CheckBox fx:id="checkbox_auto_enter" onAction="#changeAutoEnter" mnemonicParsing="false" text="接收完自动换行" />
				<CheckBox fx:id="checkbox_save_file" onAction="#getFileName" mnemonicParsing="false" text="接收转至文件" />
				<CheckBox fx:id="checkbox_pause_disply" onAction="#puseDisplay" mnemonicParsing="false" text="暂停接收区显示" />
			</children>
			<GridPane.margin>
				<Insets top="100.0" />
			</GridPane.margin>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
		</VBox>
		<VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0"
			GridPane.rowIndex="2">
			<children>
				<Label text="发送设置" />
				<HBox prefHeight="30.0" prefWidth="500.0" spacing="10.0">
					<children>
						<RadioButton fx:id="radiobutton_send_ascii" onAction="#onSendAscii" mnemonicParsing="false" selected="true"
							text="ASCII" />
						<RadioButton fx:id="radiobutton_send_hex" onAction="#onSendHex" mnemonicParsing="false" text="HEX" />
					</children>
				</HBox>
				<CheckBox fx:id="checkbox_auto_parse" onAction="#onChangeAtuoParse" mnemonicParsing="false" text="自动解析转义符" />
				<CheckBox fx:id="checkbox_send_auto_enter" onAction="#onChangeAutoEnterSend" mnemonicParsing="false" text="AT指令自动回车" />
				<CheckBox fx:id="checkbox_send_file_name" onAction="#onGetFileNameSend" mnemonicParsing="false" text="打开文件数据源" />
				<HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
					<children>
						<CheckBox fx:id="checkbox_is_cycle" onAction="#onChangeToCycle" mnemonicParsing="false" text="循环周期" />
						<TextField fx:id="textfield_cycle_t"  maxWidth="80.0" prefWidth="80.0" />
						<Label text="ms" />
					</children>
					<VBox.margin>
						<Insets />
					</VBox.margin>
				</HBox>
			</children>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
			<GridPane.margin>
				<Insets top="60.0" />
			</GridPane.margin>
		</VBox>
		<VBox prefHeight="200.0" prefWidth="100.0"
			GridPane.columnIndex="1" GridPane.rowSpan="3">
			<children>
				<Label text="数据日志">
					<padding>
						<Insets bottom="15.0" top="15.0" />
					</padding>
				</Label>
				<TextArea fx:id="textarea_log" editable="false" prefHeight="570.0"
					prefWidth="740.0" />
				<HBox prefHeight="40.0" prefWidth="740.0" />
				<HBox prefHeight="94.0" prefWidth="740.0" spacing="10.0">
					<children>
						<Label alignment="CENTER" text="数据发送">
							<padding>
								<Insets bottom="10.0" right="10.0" top="15.0" />
							</padding>
						</Label>
						<HBox fx:id="hbox_des_host" alignment="CENTER" disable="true" prefHeight="47.0"
							prefWidth="431.0">
							<children>
								<Label text="远程主机：" />
								<TextField fx:id="textfield_des_host" />
								<Button mnemonicParsing="false" text="←清除" onAction="#doClearDesHost" />
							</children>
						</HBox>
						<Button alignment="CENTER" contentDisplay="RIGHT"
							mnemonicParsing="false" prefHeight="35.0" prefWidth="80.0"
							text="↓清除" textAlignment="CENTER" onAction="#doClearBottom">
							<HBox.margin>
								<Insets top="5.0" />
							</HBox.margin>
						</Button>
						<Button alignment="CENTER" contentDisplay="RIGHT"
							mnemonicParsing="false" prefHeight="35.0" prefWidth="80.0"
							text="↑清除" textAlignment="CENTER" onAction="#doClearTop" >
							<HBox.margin>
								<Insets left="20.0" top="5.0" />
							</HBox.margin>
						</Button>
					</children>
				</HBox>
				<HBox prefHeight="162.0" prefWidth="740.0">
					<children>
						<TextArea fx:id="textarea_send_message" prefHeight="94.0" prefWidth="591.0" />
						<Button fx:id="button_send" mnemonicParsing="false" prefHeight="165.0"
							prefWidth="150.0" text="发送" textAlignment="CENTER"
							textFill="#2ba307" onAction="#doSendMessage">
							<font>
								<Font size="30.0" />
							</font>
						</Button>
					</children>
				</HBox>
			</children>
		</VBox>
	</children>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
</GridPane>
